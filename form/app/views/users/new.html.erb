<%= form_for @user do |u| %>

    <p>
        <%= u.label 'Username:' %><br>
        <%= u.text_field :username %>
    </p>
    <p>
        <%= u.label 'Email:'%><br>
        <%= u.text_field :email %>
    </p>
    <p>
        <%= u.label 'Password:' %><br>
        <%= u.password_field :password %>
    <p>
    <p>
        <%= u.submit %>
    </p>

<% end %>
